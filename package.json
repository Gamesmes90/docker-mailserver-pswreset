{
  "name": "docker-mailserver-pswreset",
  "version": "1.1.0",
  "description": "Password reset for docker-mailserver",
  "main": "app.js",
  "bin": "app.js",
  "scripts": {
    "start": "node app.js",
    "obfuscate": "node obfuscator.js",
    "build-linux-arm64": "npm run obfuscate && pkg . -t node18-linux-arm64",
    "build-linux-x64": "npm run obfuscate && pkg . -t node18-linux-x64",
    "clean": "rm public/utils.js"
  },
  "keywords": [
    "password"
  ],
  "author": "Gamesmes90",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "body-parser": "^1.20.1",
    "child_process": "^1.0.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "javascript-obfuscator": "^4.0.0",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.8.0"
  },
  "pkg": {
    "scripts": [
      "app.js",
      "public/jquery.min.js",
      "public/utils.js"
    ],
    "assets": [
      "public/**/*",
      "pass_reset.html",
      "reset.html",
      "public/favicon-32x32x.png"
    ],
    "targets": [
      "node18",
      "node18-linux-arm64",
      "node18-linux-x64"
    ]
  }
}
